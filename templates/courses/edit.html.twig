{# templates/courses/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Course: {{ course.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/course.css') }}">
{% endblock %}

{% block body %}
<div class="course-container">
    <div class="course-form-container">
        <h1>Edit Course</h1>
        {{ form_errors(form) }}
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.code) }}
                {{ form_widget(form.code, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(form.code) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(form.image) }}
            </div>
            <button type="submit" class="submit-button">Update Course</button>
        {{ form_end(form) }}
    </div>
    <div class="back-link">
        <a href="{{ path('courses_show', { id: course.id, code: course.code }) }}" class="btn">Back to Course</a>
    </div>
</div>
{% endblock %}
