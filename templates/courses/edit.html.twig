{# templates/courses/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'course.edit.title'|trans({'%course%': course.title}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/course.css') }}">
{% endblock %}

{% block body %}
<div class="course-container">
    <h1>{{ 'course.edit.heading'|trans }}</h1>
    {{ form_errors(form) }}
    {{ form_start(form) }}
        <div class="course-form-group">
            {{ form_label(form.title, 'course.edit.label.title'|trans) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="course-form-group">
            {{ form_label(form.description, 'course.edit.label.description'|trans) }}
            {{ form_widget(form.description, {'attr': {'rows': 3}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="course-form-group">
            {{ form_label(form.code, 'course.edit.label.code'|trans) }}
            {{ form_widget(form.code) }}
            {{ form_errors(form.code) }}
        </div>
        <div class="course-form-group">
            {{ form_label(form.image, 'course.edit.label.image'|trans) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>
        <button type="submit" class="btn">{{ 'course.edit.submit'|trans }}</button>
    {{ form_end(form) }}

    {# ← switched from courses_show to courses_index ↓ #}
    <a href="{{ path('courses_index') }}" class="back-link">
        {{ 'course.edit.back_to_courses'|trans }}
    </a>
</div>
{% endblock %}
