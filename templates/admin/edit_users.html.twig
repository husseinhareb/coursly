{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
<main class="admin-content">
    <h1>Users</h1>
    <a id="add_user_btn" href="{{ path('app_register', {'username': app.user.username}) }}" class="btn btn-add-user" style="margin-bottom: 1rem;">Add User</a>
    
    <table class="users-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Profile Picture</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Roles</th>
                <th>Enrolled Courses</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>
                        {% if user.profilePic %}
                            <img src="{{ asset('uploads/profile_pics/' ~ user.profilePic) }}" alt="Profile Picture" class="table-profile-pic">
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phoneNumber ?: 'N/A' }}</td>
                    <td>{{ user.address ?: 'N/A' }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        {% if user.enrollments|length > 0 %}
                            {% for enrollment in user.enrollments %}
                                {{ enrollment.course.code }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            None
                        {% endif %}
                    </td>
                    <td>
                        <a id="edit_user_btn_{{ user.id }}" href="{{ path('admin_edit_user', {'username': app.user.username, 'id': user.id}) }}" class="btn btn-edit-user">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">No users found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
