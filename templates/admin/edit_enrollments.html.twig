{% extends 'base.html.twig' %}

{% block title %}Manage Enrollments for {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
<div class="enrollments-page">
    <header class="page-header">
        <h1>Manage Enrollments for {{ user.firstName }} {{ user.lastName }}</h1>
    </header>
    
    {% if 'ROLE_ADMIN' in user.roles %}
        <div class="alert alert-warning">
            Admin users cannot be enrolled in courses.
        </div>
        <section class="current-enrollments">
            <h2>Current Enrollments</h2>
            {% if user.enrollments|length > 0 %}
                <ul class="enrollments-list">
                    {% for enrollment in user.enrollments %}
                        <li>
                            <span class="course-title"><i class="fas fa-book"></i> {{ enrollment.course.title }}</span>
                            {# Enrollment removal is disabled for admin users #}
                            <button type="button" class="btn btn-secondary" title="Remove Enrollment" disabled>
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="no-enrollments"><i class="fas fa-info-circle"></i> No enrolled courses.</p>
            {% endif %}
        </section>
    {% else %}
        <section class="current-enrollments">
            <h2>Current Enrollments</h2>
            {% if user.enrollments|length > 0 %}
                <ul class="enrollments-list">
                    {% for enrollment in user.enrollments %}
                        <li>
                            <span class="course-title"><i class="fas fa-book"></i> {{ enrollment.course.title }}</span>
                            <form action="{{ path('admin_remove_enrollment', {'username': app.user.username, 'id': user.id, 'courseId': enrollment.course.id}) }}" method="post" class="enrollment-action">
                                <button type="submit" class="btn btn-danger" title="Remove Enrollment">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="no-enrollments"><i class="fas fa-info-circle"></i> No enrolled courses.</p>
            {% endif %}
        </section>
    
        <section class="available-courses">
            <h2>Available Courses</h2>
            {% set enrolledIds = user.enrollments|map(enrollment => enrollment.course.id) %}
            {% set availableCourses = [] %}
            {% for course in courses %}
                {% if course.id not in enrolledIds %}
                    {% set availableCourses = availableCourses|merge([course]) %}
                {% endif %}
            {% endfor %}
            {% if availableCourses|length > 0 %}
                <ul class="courses-list">
                    {% for course in availableCourses %}
                        <li>
                            <span class="course-title"><i class="fas fa-book-open"></i> {{ course.title }}</span>
                            <form action="{{ path('admin_add_enrollment', {'username': app.user.username, 'id': user.id, 'courseId': course.id}) }}" method="post" class="enrollment-action">
                                <button type="submit" class="btn btn-success" title="Add Enrollment">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="all-enrolled"><i class="fas fa-check-circle"></i> All courses are already enrolled.</p>
            {% endif %}
        </section>
    {% endif %}
    
    <div class="page-actions">
        <a href="{{ path('admin_edit_user', {'username': app.user.username, 'id': user.id}) }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Profile
        </a>
    </div>
</div>
{% endblock %}
