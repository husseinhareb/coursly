{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('app_home') }}">MySite</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Logged in as {{ app.user.userIdentifier }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container mt-4">
    {% if app.user %}
        <h1>Hello, {{ app.user.userIdentifier }}!</h1>
        <p>Your email: {{ app.user.userIdentifier }}</p>
    {% else %}
        <h1>Welcome to the homepage!</h1>
        <p>Please log in to see your account details.</p>
    {% endif %}
</div>
{% endblock %}
