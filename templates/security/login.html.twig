{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-wrapper">
    <!-- Logo -->
    <div class="login-logo">
        {# Replace with your own logo path #}
        <img src="{{ asset('images/logo.png') }}" alt="Logo">
    </div>

    <!-- Error Message (if any) -->
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <!-- Already logged in message -->
    {% if app.user %}
        <div class="alert alert-info">
            {{ 'login.logged_in_as'|trans({'%username%': app.user.userIdentifier}) }},
            <a href="{{ path('app_logout') }}">{{ 'login.logout'|trans }}</a>
        </div>
    {% endif %}

    <!-- Login Form -->
    <div class="login-form">
        <h2>{{ 'login.title'|trans }}</h2>
        <form method="post">
            <div class="form-group">
                <label for="username" class="form-label">{{ 'login.email_label'|trans }}</label>
                <input
                    type="email"
                    name="_username"
                    id="username"
                    class="form-control"
                    value="{{ last_username }}"
                    required
                    autofocus
                >
            </div>
            <div class="form-group">
                <label for="password" class="form-label">{{ 'login.password_label'|trans }}</label>
                <input
                    type="password"
                    name="_password"
                    id="password"
                    class="form-control"
                    required
                >
            </div>
            
            <input
                type="hidden"
                name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            
            <button class="btn-login" type="submit">{{ 'login.button'|trans }}</button>

            <span class="lost-password">
                <a href="#">{{ 'login.lost_password'|trans }}</a>
            </span>
        </form>

        <div class="login-separator"></div>

        <!-- Footer with Language Selector & Cookies Notice -->
        <div class="login-footer">
            <div class="language-selector">
                <form id="language-form" action="" method="get">
                    <select name="locale" onchange="window.location.href = '{{ path('change_language', {'locale': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', this.value)">
                        <option value="en">English (en)</option>
                        <option value="fr">Fran√ßais (fr)</option>
                        {# Add more languages as needed #}
                    </select>
                </form>
            </div>

            <div class="cookies-notice">
                <a href="#">{{ 'login.cookies_notice'|trans }}</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
