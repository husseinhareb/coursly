{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/change_password.css') }}">
{% endblock %}

{% block body %}
<div class="change-password-container">
    <h1>Change Your Password</h1>
    <p>You are currently using the auto-generated password. Please change it to a new, secure password.</p>
    {{ form_start(changePasswordForm) }}
        {{ form_row(changePasswordForm.newPassword.first) }}
        {{ form_row(changePasswordForm.newPassword.second) }}
        <button type="submit" class="btn">Change Password</button>
    {{ form_end(changePasswordForm) }}
</div>
{% endblock %}
