{# templates/posts/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Post for {{ course.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/post.css') }}">
{% endblock %}

{% block body %}
<div class="post-container">
    <h1>Create a New Post for {{ course.title }}</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
        <div class="post-form-group">
            {{ form_row(form.title) }}
        </div>
        <div class="post-form-group">
            {{ form_row(form.description) }}
        </div>
        <div class="post-form-group">
            {{ form_row(form.type) }}
        </div>
        <div class="post-form-group">
            {{ form_row(form.attachment) }}
        </div>
        <button type="submit" class="btn">Create Post</button>
    {{ form_end(form) }}

    <a href="{{ path('courses_show', { id: course.id, code: course.code }) }}">Back to Course</a>
</div>
{% endblock %}
